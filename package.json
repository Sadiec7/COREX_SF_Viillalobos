{
  "name": "electron-seguros",
  "version": "1.0.0",
  "description": "Sistema de Seguros - Arquitectura MVC con Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:css": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "postinstall": "npm run build:css",
    "test:db": "node testing/db_integrity.test.js",
    "test:ui": "node testing/ui_smoke.test.js"
  },
  "keywords": [
    "electron",
    "mvc",
    "seguros"
  ],
  "author": "Sistema de Seguros",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.56.0",
    "electron": "^38.1.2",
    "playwright": "^1.56.0",
    "playwright-core": "^1.56.0",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "sql.js": "^1.13.0",
    "xmlrpc": "^1.3.2"
  }
}
